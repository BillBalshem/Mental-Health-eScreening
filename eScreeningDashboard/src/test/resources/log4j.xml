<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="unit_test_file" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="target/unittest.log" />
		<param name="MaxFileSize" value="10MB" />
		<param name="MaxBackupIndex" value="10" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p:%d{dd/MMM/yyyy@HH:mm:ss,SSS}:%C{1}.%-10M--%m%n" />
		</layout>
	</appender>

	<!-- Application Loggers -->
	<logger name="gov.va.escreening">
		<level value="DEBUG" />
	</logger>
	
	<logger name="gov.va.escreening.interceptor">
		<level value="WARN" />
	</logger>
	<logger name="org.springframework.core">
		<level value="INFO" />
	</logger>

	<logger name="org.springframework.beans">
		<level value="INFO" />
	</logger>

	<logger name="org.springframework.context">
		<level value="INFO" />
	</logger>

	<category name="org.springframework.jdbc.core.JdbcTemplate">
		<priority value="INFO" />
	</category>

	<logger name="org.springframework.web">
		<level value="INFO" />
	</logger>

	<logger name="org.springframework.ws.client.MessageTracing">
		<level value="INFO" />
	</logger>
	
	<logger name="org.hibernate.type">
		<level value="INFO" />
	</logger>

	<logger name="org.apache.http.client">
		<level value="INFO" />
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="WARN" />
		<appender-ref ref="unit_test_file" />
	</root>

</log4j:configuration>
